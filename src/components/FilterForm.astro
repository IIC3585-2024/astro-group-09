<form id="filterForm">
  <label for="category">Category:</label>
  <input type="text" id="category" name="category">

  <label for="service">Streaming Service:</label>
  <input type="text" id="service" name="service">

  <label for="minRating">Minimum Rating:</label>
  <input type="number" id="minRating" name="minRating">

  <button type="submit">Filter</button>
</form>

<script>
  document.getElementById('filterForm').addEventListener('submit', async (event) => {
    event.preventDefault();
    const form = event.target as HTMLFormElement;
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());
    const response = await fetch('/api/filterSeries', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(data)
    });
    const result = await response.json();
    const seriesList = document.querySelector('ul');
    seriesList.innerHTML = '';
    result.series.forEach(serie => {
      const listItem = document.createElement('li');
      listItem.innerHTML = `
        <h2>${serie.name}</h2>
        <p>${serie.description}</p>
        <p>Streaming Service: ${serie.streamingService}</p>
        <p>Seasons: ${serie.seasons}</p>
        <p>Rating: ${serie.rating} (${serie.ratingsCount} ratings)</p>
        <a href="/series/${serie.id}">Details</a>
      `;
      seriesList.appendChild(listItem);
    });
  });
</script>

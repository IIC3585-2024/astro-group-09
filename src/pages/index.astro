---
import Layout from '../layouts/Layout.astro';
import SeriesList from '../components/SeriesList.astro';
import AuthForm from '../components/AuthForm.astro';
import FilterForm from '../components/FilterForm.astro';
---

<Layout>
  <h1>Welcome to Series Recommendations</h1>

  <h2>Login</h2>
  <AuthForm type="login" />

  <h2>Register</h2>
  <AuthForm type="register" />

  <h2>Series List</h2>
  <SeriesList />

  <h2>Filter Series</h2>
  <FilterForm />
</Layout>

---
import Layout from '@layouts/Default.astro';
---

<Layout
  title='Añadir Nueva Serie'
  description='Formulario para añadir una nueva serie'
  pageTitle='Añadir Nueva Serie'
>
  <main class='bg-green p-6'>
    <form id="add-series-form" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" action="/api/add-series" method="POST">
      <div class="mb-4">
        <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Nombre de la Serie</label>
        <input type="text" id="name" name="name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Nombre de la Serie" required />
      </div>
      <div class="mb-4">
        <label for="image" class="block text-gray-700 text-sm font-bold mb-2">URL de la Imagen</label>
        <input type="text" id="image" name="image" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="URL de la Imagen" required />
      </div>
      <div class="mb-4">
        <label for="streamingService" class="block text-gray-700 text-sm font-bold mb-2">Servicio de Streaming</label>
        <input type="text" id="streamingService" name="streamingService" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Servicio de Streaming" required />
      </div>
      <div class="mb-4">
        <label for="seasons" class="block text-gray-700 text-sm font-bold mb-2">Temporadas</label>
        <input type="number" id="seasons" name="seasons" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Número de Temporadas" required />
      </div>
      <div class="mb-4">
        <label for="episodesPerSeason" class="block text-gray-700 text-sm font-bold mb-2">Episodios por Temporada (Separados por Coma)</label>
        <input type="text" id="episodesPerSeason" name="episodesPerSeason" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Ej: 10,10,10" required />
      </div>
      <div class="mb-4">
        <label for="description" class="block text-gray-700 text-sm font-bold mb-2">Descripción</label>
        <textarea id="description" name="description" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Descripción de la Serie" required></textarea>
      </div>
      <div class="mb-4">
        <label for="category" class="block text-gray-700 text-sm font-bold mb-2">Categoría</label>
        <input type="text" id="category" name="category" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Categoría" required />
      </div>
      <div class="mb-4">
        <label for="rating" class="block text-gray-700 text-sm font-bold mb-2">Calificación</label>
        <input type="number" step="0.1" id="rating" name="rating" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Calificación" required />
      </div>
      <div class="flex items-center justify-between">
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
          Añadir Serie
        </button>
      </div>
    </form>
  </main>
</Layout>
